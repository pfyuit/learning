<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- Configuration for Scanning -->
	<context:component-scan base-package="com.pfyuit.myjavaee.dao.jpa"></context:component-scan>

	<!-- Configuration for Myblog Data Source -->
	<bean id="dataSourceMyblog" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.db.myblog.driverClassName}" />
		<property name="url" value="${jdbc.db.myblog.url}" />
		<property name="username" value="${jdbc.db.myblog.username}" />
		<property name="password" value="${jdbc.db.myblog.password}" />
	</bean>

	<!-- Configuration for Hibernate 4 Using Myblog Data Source -->
	<bean id="sessionFactoryMyblog" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSourceMyblog" />
		<property name="annotatedClasses">
			<list>
				<value>com.pfyuit.myjavaee.model.jpa.BlogModel</value>
				<value>com.pfyuit.myjavaee.model.jpa.CategoryModel</value>
				<value>com.pfyuit.myjavaee.model.jpa.CommentModel</value>
				<value>com.pfyuit.myjavaee.model.jpa.LinkModel</value>
				<value>com.pfyuit.myjavaee.model.jpa.UserModel</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</prop>
				<prop key="hibernate.cache.use_second_level_cache">true</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop>
				<prop key="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManagerMyblog" class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		p:sessionFactory-ref="sessionFactoryMyblog">
		<qualifier value="myblog" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManagerMyblog" />



	<!-- Configuration for Scanning -->
	<context:component-scan base-package="com.pfyuit.myjavaee.dao.mapper"></context:component-scan>

	<!-- Configuration for Data Source -->
	<bean id="dataSourcePinche" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.db.pinche.driverClassName}" />
		<property name="url" value="${jdbc.db.pinche.url}" />
		<property name="username" value="${jdbc.db.pinche.username}" />
		<property name="password" value="${jdbc.db.pinche.password}" />
	</bean>

	<!-- Configuration for MyBatis Using Pinche Data Source -->
	<bean id="sqlSessionFactoryPinche" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourcePinche" />
		<property name="configLocation" value="classpath:/mybatis/mybatis-config.xml" />
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryPinche" />
		<property name="basePackage" value="com.pfyuit.myjavaee.dao.mapper" />
	</bean>

	<bean id="transactionManagerPinche" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourcePinche" />
		<qualifier value="pinche" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManagerPinche" />


	<!-- Configuration of Global Data Source -->
	<bean id="dataSourceGlobalMyblog" class="com.atomikos.jdbc.AtomikosDataSourceBean" init-method="init"
		destroy-method="close">
		<property name="uniqueResourceName" value="mysql/myblog" />
		<property name="xaDataSourceClassName" value="com.mysql.jdbc.jdbc2.optional.MysqlXADataSource" />
		<property name="xaProperties">
			<props>
				<prop key="user">${jdbc.db.myblog.username}</prop>
				<prop key="password">${jdbc.db.myblog.password}</prop>
				<prop key="URL">${jdbc.db.myblog.url}</prop>
				<prop key="pinGlobalTxToPhysicalConnection">true</prop>
				<prop key="autoReconnect">true</prop>
			</props>
		</property>
		<!-- <property name="poolSize" value="10" /> -->
		<!-- <property name="testQuery" value="SELECT 1" /> -->
	</bean>

	<bean id="dataSourceGlobalPinche" class="com.atomikos.jdbc.AtomikosDataSourceBean" init-method="init"
		destroy-method="close">
		<property name="uniqueResourceName" value="mysql/pinche" />
		<property name="xaDataSourceClassName" value="com.mysql.jdbc.jdbc2.optional.MysqlXADataSource" />
		<property name="xaProperties">
			<props>
				<prop key="user">${jdbc.db.pinche.username}</prop>
				<prop key="password">${jdbc.db.pinche.password}</prop>
				<prop key="URL">${jdbc.db.pinche.url}</prop>
				<prop key="pinGlobalTxToPhysicalConnection">true</prop>
				<prop key="autoReconnect">true</prop>
			</props>
		</property>
		<!-- <property name="poolSize" value="10" /> -->
		<!-- <property name="testQuery" value="SELECT 1" /> -->
	</bean>

	<!-- Configuration for MyBatis Using Global Data Source -->
	<bean id="sqlSessionFactoryGlobalMyblog" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourceGlobalMyblog" />
		<property name="configLocation" value="classpath:/mybatis/mybatis-config.xml" />
	</bean>

	<bean id="sqlSessionFactoryGlobalPinche" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourceGlobalPinche" />
		<property name="configLocation" value="classpath:/mybatis/mybatis-config.xml" />
	</bean>

	<bean id="atomikosTransactionManager" class="com.atomikos.icatch.jta.UserTransactionManager" init-method="init"
		destroy-method="close">
		<property name="forceShutdown" value="true" />
	</bean>

	<bean id="atomikosUserTransaction" class="com.atomikos.icatch.jta.UserTransactionImp">
		<property name="transactionTimeout" value="300" />
	</bean>

	<bean id="transactionManagerJta" class="org.springframework.transaction.jta.JtaTransactionManager">
		<property name="transactionManager" ref="atomikosTransactionManager" />
		<property name="userTransaction" ref="atomikosUserTransaction" />
		<qualifier value="jta" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManagerJta" />

</beans>
  